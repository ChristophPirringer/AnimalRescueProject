<h2>Organizations</h2>

<%if @organizations.any? %>
  <ul>
    <% @organizations.each do |organization| %>
    <li><a href="/organizations/<%= organization.id() %>"><%= organization.name() %> </a></li>
    <% end %>
  </ul>

<% else %>
    <p>There are no organizations yet!</p>
<% end %>
<a href="/organizations/new" class="btn btn-success">Add a new Organization!</a>
